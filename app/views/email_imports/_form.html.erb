<%= simple_form_for :email_import, url: email_imports_path, html: {multipart: true} do |f| %>
  <p><%= t(:upload_eml_files_to_import_them_as_new_tickets) %></p>
  <h5><%= fa_icon 'paperclip fw' %><%= t(:upload_files) %></h5>

  <%# TODO pick one of these %>
  <div class="input-group mb-2">
    <div class="custom-file">
      <%= f.file_field :file, label: false %>
      <%# TODO translate this text %>
      <%= f.label :file, 'Choose files', class: 'custom-file-label' %>
    </div>
  </div>

  <%= f.input :files, as: :file, input_html: { multiple: true, accept: '.eml' } %>

  <p><%= f.submit t(:perform_email_import), class: 'btn btn-primary' %></p>
<% end %>