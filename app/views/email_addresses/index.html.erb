<div class="container">
  <div class="card">
    <div class="card-header">
      <%= link_to t(:new_email_address), new_email_address_path, class: 'btn btn-primary float-right' %>
      <h2 class="mb-0"><%= t(:email_addresses) %></h2>
    </div>
    <table class="card-body table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.email_address.email') %></th>
          <th><%= t('activerecord.attributes.email_address.name') %></th>
          <th><%= t('activerecord.attributes.email_address.default') %></th>
          <th><%= t('activerecord.attributes.email_address.verification_token') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @email_addresses.each do |email_address| %>
          <tr>
            <td><%= email_address.email %></td>
            <td><%= email_address.name %></td>
            <td><%= fa_icon 'check' if email_address.default? %></td>
            <td><%= fa_icon 'check' if email_address.verification_token.nil? %></td>
            <td>
              <%= link_to edit_email_address_path(email_address), class: 'btn btn-sm btn-primary' do %>
                <%= fa_icon 'edit' %>
              <% end %>
              <%= link_to email_address_path(email_address), method: :delete,
                  'data-confirm' => t(:are_you_sure), class: 'btn btn-sm btn-danger' do %>
                <%= fa_icon 'trash' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="card-footer text-center">
      <%= will_paginate @email_address %>
    </div>
  </div>
</div>