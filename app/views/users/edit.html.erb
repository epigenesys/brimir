<div class="container">
  <div class="card">
    <div class="card-header">
      <% if can? :destroy, @user %>
        <%= link_to t(:remove_user), user_path(@user), 
            method: :delete, 
            data: { confirm: t(:are_you_sure) },
            class: 'btn btn-danger' %>
      <% end %>
      <h2 class="mb-0"><%= t(:edit_user) %></h2>
    </div>
    <div class="card-body">
      <%= render 'form' %>
    </div>
  </div>
</div>