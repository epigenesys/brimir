<% if !params[:ticket][:status].blank? %>
  $('#ticketStatuses')
    .html('<%= fa_icon status_icon_class(@ticket.status), text:  t(@ticket.status, scope: 'activerecord.attributes.ticket.statuses').capitalize %>')
    .removeClass()
    .addClass('btn btn-secondary btn-sm dropdown-toggle dropdown-status-<%= @ticket.status %>')

<% elsif !params[:ticket][:priority].blank? %>
  $('#ticketPriority')
    .html('<%= fa_icon 'circle', style: 'far', text: t(@ticket.priority, scope: 'activerecord.attributes.ticket.priorities').capitalize %>')
    .removeClass()
    .addClass('btn btn-secondary btn-sm dropdown-toggle dropdown-priority-<%= @ticket.priority %>')
<% else %>
  window.location.reload();
<% end %>