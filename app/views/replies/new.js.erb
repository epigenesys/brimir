<%
  result = ''
  simple_form_for @reply do |f|
    result = render 'replies/notified_users', f: f
  end
%>

<% if @reply.internal? %>
  $('iframe').contents().find('#tinymce').css('background-color', '#fff6d9');
  $('#reply_content').css('background-color', '').css('background-color', '#fff6d9');
  $('.reply-submit').text('<%= I18n.t(:attach_note) %>')
<% else %>
  $('iframe').contents().find('#tinymce').css('background-color', '');
  $('#reply_content').css('background-color', '');
  $('.reply-submit').text('<%= I18n.t(:send_reply) %>')

<% end %>

$('[data-notified-users]').html('<%= j result %>');
$('[data-notified-users] select').select2({ width: 'resolve' });
