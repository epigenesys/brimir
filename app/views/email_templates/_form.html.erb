<%= simple_form_for @email_template do |f| %>
  <%= f.input :name, tabindex: tabindex %>
  <%= f.input :kind, collection: EmailTemplate.kinds.keys.map { |k| [t(:"activerecord.attributes.email_template.kinds.#{k}.template_name"), k] }, tabindex: tabindex
  %>
  <%= f.label :message do %>
    <%= t('activerecord.attributes.email_template.message') %>
    <%= content_tag :span, content_tag(:i, '', class: 'fa fa-info-circle'),
      data: { tooltip: '' }, class: 'has-tip', title: t(:tooltip) %>
  <% end %>
  <%= f.rich_text_area :message, label: false, tabindex: tabindex %>

  <%= f.submit t(:save), class: 'btn btn-primary mt-3' %>
<% end %>
