<div class="row">
  <div class="card col-lg-8 offset-lg-2">
    <div class="card-body">
      <h3><%= t(:change_password) %></h3>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :patch) do |f| %>
        <%= devise_error_messages! %>
        <%= f.input :reset_password_token, as: :hidden %>

        <%= f.input :password, label: t(:new_password) %>
        <%= f.input :password_confirmation, label: t(:new_password_confirmation) %>

        <%= f.submit t(:change_password), class: 'btn btn-primary' %>

        <%= render 'devise/shared/links' %>
      <% end %>
    </div>
  </div>
</div>
